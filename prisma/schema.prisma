generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Series {
  id        Int       @id @default(autoincrement())
  title     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  episodes  Episode[]
  views     Int       @default(0)
  slug      String    @unique
}

model Episode {
  id        Int      @id @default(autoincrement())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  seriesId  Int
  series    Series   @relation(fields: [seriesId], references: [id])
  views     Int      @default(0)
  slug      String   @unique
}
